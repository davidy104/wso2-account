            <bpel:assign validate="no" name="AssignAccNumToCreditOp">
                
                <bpel:copy>
                    <bpel:from>
                        <bpel:literal>
                            <ns:creditAccount xmlns:ns="http://service" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"><ns:accountNo>0</ns:accountNo>
  <ns:amount>0</ns:amount>

                            </ns:creditAccount>
                        </bpel:literal>
                    </bpel:from>
                    <bpel:to variable="creditAccountRequest" part="parameters"></bpel:to>
                </bpel:copy>
                <bpel:copy>
                    <bpel:from part="parameters" variable="createAccountResponse">
                        <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:return]]></bpel:query>
                    </bpel:from>
                    <bpel:to part="parameters" variable="creditAccountRequest">
                        <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:accountNo]]></bpel:query>
                    </bpel:to>
                </bpel:copy>
                
                <bpel:copy>
                    <bpel:from>
                        <![CDATA['2000']]>
                    </bpel:from>
                    <bpel:to part="parameters" variable="creditAccountRequest">
                        <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:amount]]></bpel:query>
                    </bpel:to>
                </bpel:copy>
            </bpel:assign>
            <bpel:invoke name="CreditAccountOperationInvoke" partnerLink="AccountServicePL" operation="creditAccount" portType="ns:AccountServicePortType" inputVariable="creditAccountRequest" outputVariable="creditAccountResponse"></bpel:invoke>
            
            
            <bpel:if name="CheckCreditState">
                <bpel:condition><![CDATA[$creditAccountResponse.parameters/ns:return = 'true']]></bpel:condition>
                <bpel:sequence>
                    <bpel:assign validate="no" name="AssignAccountNumTocheckBalanceOp">
                        <bpel:copy>
                            <bpel:from>
                                <bpel:literal>
                                    <ns:checkAccountBalance xmlns:ns="http://service" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"><ns:accountNo>0</ns:accountNo>

                                    </ns:checkAccountBalance>
                                </bpel:literal>
                            </bpel:from>
                            <bpel:to variable="checkBalanceRequest" part="parameters"></bpel:to>
                        </bpel:copy>
                        <bpel:copy>
                            <bpel:from part="parameters" variable="createAccountResponse">
                                <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:return]]></bpel:query>
                            </bpel:from>
                            <bpel:to part="parameters" variable="checkBalanceRequest">
                                <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:accountNo]]></bpel:query>
                            </bpel:to>
                        </bpel:copy>
                    </bpel:assign>
                    <bpel:invoke name="CheckBalanceOperationInvoke" partnerLink="AccountServicePL" operation="checkAccountBalance" portType="ns:AccountServicePortType" inputVariable="checkBalanceRequest" outputVariable="checkBalanceResponse"></bpel:invoke>
                    
                    
                    <bpel:assign validate="no" name="AssignCheckBalanceOpToreply">
                        
                        <bpel:copy>
                            <bpel:from>
                                <bpel:literal>
                                    <tns:AccountServiceDemoProcessResponse xmlns:tns="http://wso2.org/bps/sample" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"><tns:result>0</tns:result>

                                    </tns:AccountServiceDemoProcessResponse>
                                </bpel:literal>
                            </bpel:from>
                            <bpel:to variable="output" part="payload"></bpel:to>
                        </bpel:copy>
                        <bpel:copy>
                            <bpel:from part="parameters" variable="checkBalanceResponse">
                                <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:return]]></bpel:query>
                            </bpel:from>
                            <bpel:to part="payload" variable="output">
                                <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:result]]></bpel:query>
                            </bpel:to>
                        </bpel:copy>
                    </bpel:assign>
                </bpel:sequence>
                <bpel:else>
                    <bpel:assign validate="no" name="AssignZeroToReplyOn">
                        <bpel:copy>
                            <bpel:from>
                                <bpel:literal xml:space="preserve"><tns:AccountServiceDemoProcessResponse xmlns:tns="http://wso2.org/bps/sample" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:result>0</tns:result>
</tns:AccountServiceDemoProcessResponse>
</bpel:literal>
                            </bpel:from>
                            <bpel:to part="payload" variable="output">
                                <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:result]]></bpel:query>
                            </bpel:to>
                        </bpel:copy>
                    </bpel:assign>
                </bpel:else>
            </bpel:if>
        </bpel:sequence>
        <bpel:reply name="replyOutput" 
               partnerLink="client"
               portType="tns:AccountServiceDemoProcess"
               operation="process" 
               variable="output"
